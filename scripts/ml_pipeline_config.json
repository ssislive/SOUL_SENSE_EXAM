{
    "pipeline": {
        "name": "SoulSense ML Training Pipeline",
        "version": "1.0.0",
        "description": "Reproducible pipeline for training depression risk prediction models"
    },
    "data": {
        "synthetic_samples": 1000,
        "test_size": 0.2,
        "validation_size": 0.1,
        "noise_level": 0.1,
        "random_state": 42
    },
    "features": {
        "names": [
            "emotional_recognition",
            "emotional_understanding",
            "emotional_regulation",
            "emotional_reflection",
            "social_awareness",
            "total_score",
            "age",
            "average_score",
            "sentiment_score"
        ],
        "scaling": "standard"
    },
    "models": {
        "default": "rf",
        "available": ["rf", "gb", "lr", "svm"],
        "descriptions": {
            "rf": "Random Forest Classifier",
            "gb": "Gradient Boosting Classifier",
            "lr": "Logistic Regression",
            "svm": "Support Vector Machine"
        }
    },
    "training": {
        "default_cv_folds": 5,
        "hyperparameter_tuning": true,
        "quick_mode": true,
        "scoring_metric": "f1_weighted"
    },
    "hyperparameters": {
        "rf": {
            "full": {
                "n_estimators": [50, 100, 200],
                "max_depth": [3, 5, 10, null],
                "min_samples_split": [2, 5, 10],
                "min_samples_leaf": [1, 2, 4],
                "class_weight": ["balanced", null]
            },
            "quick": {
                "n_estimators": [100],
                "max_depth": [5],
                "min_samples_split": [2],
                "class_weight": ["balanced"]
            }
        },
        "gb": {
            "full": {
                "n_estimators": [50, 100, 200],
                "max_depth": [3, 5, 7],
                "learning_rate": [0.01, 0.1, 0.2],
                "min_samples_split": [2, 5],
                "min_samples_leaf": [1, 2]
            },
            "quick": {
                "n_estimators": [100],
                "max_depth": [5],
                "learning_rate": [0.1]
            }
        },
        "lr": {
            "full": {
                "C": [0.01, 0.1, 1, 10],
                "penalty": ["l1", "l2"],
                "solver": ["liblinear", "saga"],
                "class_weight": ["balanced", null],
                "max_iter": [1000]
            },
            "quick": {
                "C": [1],
                "penalty": ["l2"],
                "solver": ["lbfgs"],
                "max_iter": [1000]
            }
        },
        "svm": {
            "full": {
                "C": [0.1, 1, 10],
                "kernel": ["rbf", "linear"],
                "gamma": ["scale", "auto"],
                "class_weight": ["balanced", null]
            },
            "quick": {
                "C": [1],
                "kernel": ["rbf"],
                "gamma": ["scale"]
            }
        }
    },
    "output": {
        "directory": "models/pipeline_output",
        "artifacts_subdir": "artifacts",
        "save_confusion_matrix": true,
        "save_metrics_report": true
    },
    "versioning": {
        "enabled": true,
        "registry_path": "models/registry",
        "default_bump_type": "patch"
    },
    "logging": {
        "level": "INFO",
        "file": "logs/ml_training.log",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },
    "classes": {
        "names": ["Low Risk", "Moderate Risk", "High Risk"],
        "thresholds": {
            "high_risk_score": 10,
            "moderate_risk_score": 15,
            "sentiment_high_risk": -50,
            "sentiment_moderate_risk": -20
        }
    }
}
